{
    "openapi": "3.0.3",
    "info": {
      "version": "1.1.0",
      "title": " NodeBucket - OpenAPI Documentation",
      "description": "NodeBucket - OpenAPI Documentation"
    },
    "servers": [
      {
        "url": "http://localhost:3000/api"
      }
    ],
    "tags": [
      {
        "name": "Employees",
        "description": "Functions involving Employees"
      },
      {
        "name": "Tasks",
        "description": "Functions involving Tasks"
      }
    ],
    "paths": {
      "/employees/{empId}": {
        "get": {
          "tags": ["Employees"],
          "summary": "findEmployeeById",
          "description": "Find an employee by their unique Employee ID.",
          "parameters": [
            {
              "name": "empId",
              "in": "path",
              "required": true,
              "description": "4 digit Employee ID",
              "schema": {
                "type": "number"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "empId": {
                        "type": "number",
                        "example": 1009
                      },
                      "firstName": {
                        "type": "string",
                        "example": "David"
                      },
                      "lastName": {
                        "type": "string",
                        "example": "Fincher"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/employees/{empId}/tasks": {
        "get": {
          "tags": ["Tasks"],
          "summary": "findAllTasks",
          "description": "Find all tasks for an employee by entering their employee ID",
          "parameters": [
            {
              "name": "empId",
              "in": "path",
              "required": true,
              "description": "Employee Id - 4 digits",
              "schema": {
                "type": "number"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success! Employee found and tasks displayed",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "todo": {
                        "text": "string",
                        "example": "Complete administrative paperwork"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "post": {
          "tags": ["Tasks"],
          "summary": "createTask",
          "description": "API for creating a new task for an Employee",
          "parameters": [
            {
              "name": "empId",
              "in": "path",
              "required": true,
              "description": "4 Digit Employee ID",
              "schema": {
                "type": "number"
                }
              }
            ],
            "requestBody": {
              "description": "Task information",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/taskSchema"
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "Task Created"
              },
              "400": {
                "description": "Bad request"
              },
              "404": {
                "description": "Not found"
              },
              "500": {
                "description": "Server Error"
              }
            }
          }
        }
      },
      "components": {
        "schemas": {
          "taskSchema": {
            "type": "object",
            "properties": {
              "task": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "category": {
                    "type": "object",
                    "properties": {
                      "categoryName": {
                        "type": "string"
                      },
                      "backgroundColor": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "required": ["task", "category"]
          }
        }
      }
    }